@import 'next'

.pagination {
    text-align: center;
}

.powered-by::after {
  content: "|";
  padding: 0 10px;
}

.post-body {
    font-size: 15px;
}

.post-body p {
    line-height: 1.7;
    margin-bottom: 1em;
}

.post-body hr {
    margin: 2em 0;
}

.post .kg-card-markdown {
    position: relative;
}

.post .kg-card-markdown:after {
    content: "";
    display: block;
    background: linear-gradient(to bottom, transparent, white);
    position: absolute;
    width: 100%;
    height: 3em;
    bottom: 0;
    left: 0;
}

.footer {
    font-size: 12px;
    padding: 15px 0 10px;
}
